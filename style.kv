##:import ReportDialog modules.uix.reportdialog.ReportDialog
#:include modules/uix/keyboard/kb.kv
#:import NoTransition kivy.uix.screenmanager.NoTransition

<DrawerClickableItem@MDNavigationDrawerItem>
    _no_ripple_effect: True
    focus_behavior: False
    selected_color:app.theme_cls.text_color
    icon_color:app.theme_cls.text_color
    text_color:app.theme_cls.text_color

ScreenManager:
    id:root_sm
    MDScreen:
        name:"main_sc"
        MDNavigationLayout:

            MDTopAppBar:
                id:tb
                title:"Камера"
                pos_hint: {"top": 1}
                md_bg_color: "#02714C"
                left_action_items: [["menu", lambda x: app.show_menu()]]
                right_action_items:[["help-circle-outline", lambda x: app.set_screen("onboarding_sc",root_=True), "", "Справка"]]

            ScreenManager:
                id:sm
                transition:NoTransition()
                MDScreen:
                    name:"sc_photo"
                    on_enter:
                        app.handle_camera()
                        tb.title="Камера"

                    BoxLayout:
                        padding:[0,tb.height,0,0]
                        orientation:"vertical"
                        XCamera:
                            id:preview
                            aspect_ratio:"16:9"

                    MDIconButton:
                        pos_hint: {"center_x":.2,"center_y":.1}
                        #icon: "file-image"
                        icon:"calculator"
                        icon_size: "30sp"
                        icon_color:"white"
                        theme_icon_color: "Custom"
                        _no_ripple_effect: True
                        #on_press:app.choose()
                        on_press:app.set_screen("sc_text")

                    MDIconButton:
                        _no_ripple_effect: True
                        pos_hint: {"center_x":.5,"center_y":.1}
                        icon: "camera-iris"
                        icon_color:"white"
                        icon_size: "30sp"
                        theme_icon_color: "Custom"
                        on_press:app.photo()

                    MDIconButton:
                        id:flashlight_btn
                        _no_ripple_effect: True
                        pos_hint: {"center_x":.8,"center_y":.1}
                        icon_size: "30sp"
                        icon: "flash"
                        icon_color:"white"
                        theme_icon_color: "Custom"
                        on_press:app.switch_flashlight_mode()

                    MDCard:
                        size_hint:None,None
                        pos_hint: {"center_x":.5,"center_y":.85}
                        radius: (16, 16, 16, 16)
                        width:camera_help.width
                        height:camera_help.height
                        md_bg_color:app.theme_cls.bg_dark

                        MDLabel:
                            id:camera_help
                            padding:[15,10,15,10]
                            text: "Сфотографируйте математическую задачу"
                            adaptive_size:True
                            font_style:"Subtitle2"
                            
                Screen:
                    name:"sc_text"
                    on_enter:
                        tb.title="Калькулятор"
                        textarea.focus=True

                    MDBoxLayout:
                        padding:[0,tb.height + dp(15),0,0]
                        orientation:"vertical"

                        MDBoxLayout:
                            padding:[15,0,15,20]
                            RelativeLayout:
                                TextInput:
                                    id:textarea
                                    size_hint: 1, 1
                                    background_color: app.theme_cls.bg_normal
                                    hint_text:"Введите математическую задачу"
                                    keyboard_mode:"managed"
                                    use_bubble: False
                                    background_color: 0,0,0,0  
                                    foreground_color:app.theme_cls.text_color
                                    font_size:"24sp"
                                    cursor_color:app.theme_cls.secondary_text_color

                                MDFloatingActionButton:
                                    pos_hint:{"center_x":.9,"center_y":.1}
                                    theme_icon_color: "Custom"
                                    icon_color: "white"
                                    md_bg_color:"#02714C"
                                    icon: "send"
                                    on_release:
                                        app.send_equation(textarea.text)

                        KB_MAIN:
                            id:kb

                Screen:
                    on_enter:
                        tb.title="Решение"
                        app.show_adv()
                    name:"sc_solve"

                    BoxLayout:
                        orientation:"vertical"
                        padding:[20,tb.height + dp(5),20,20]
                        id:sc_solve_layout
                        MDGridLayout:
                            cols:3
                            adaptive_height:True
  
                            MDIconButton:
                                icon: "arrow-left"
                                on_release:app.set_screen(app.last_screen)

                            MDIconButton:
                                icon: "pencil"
                                on_release:
                                    app.set_screen("sc_text")
                                    textarea.text = gl.problem_input

                        ScrollView:
                            id:gl_sw
                            do_scroll_x: False
                            do_scroll_y: True
                            
                            GridLayout:
                                id:gl
                                cols:1
                                spacing:10
                                size_hint_y: None
                                height: self.minimum_height
                    
                        MDBoxLayout:
                            orientation:"vertical"
                            height:sc_solve_layout.height/8
                            size_hint_y:None
                            padding:[0,10,0,0]
                            MDCard:
                                id:adv_card
                                size_hint_y:1
                                height:self.parent.parent.parent.height/5
                                FitImage:
                                    id:adv_image
                            
                Screen:
                    name:"sc_history"
                    on_enter:
                        tb.title='История'
                        app.load_history()

                    BoxLayout:
                        orientation:"vertical"
                        padding:[15,tb.height + dp(5),15,30]
                        spacing:10

                        MDScrollView:
                            id:history_layout

                        MDRectangleFlatIconButton:
                            id:history_clear_btn
                            disabled:True
                            icon: "broom"
                            text: "Очистить историю"
                            pos_hint:{"center_x":.5}
                            theme_text_color: "Custom"
                            text_color: "white"
                            md_bg_color:"#02714C"
                            theme_icon_color: "Custom"
                            icon_color: "white"
                            on_release:
                                app.history.clear()
                                app.load_history()

                Screen:
                    name:"sc_settings"
                    on_enter:
                        tb.title="Насторйки"
                        app.setup()

                    BoxLayout:
                        orientation:"vertical"
                        padding:[0,tb.height,0,0]

                        ScrollView:
                            do_scroll_x: False
                            do_scroll_y: True
                                
                            GridLayout:
                                cols:1
                                size_hint_y: None
                                height: self.minimum_height
                                padding:[50,50,50,40]
                                #spacing:25

                                MDLabel:
                                    text:"Камера"
                                    adaptive_height:True
                                    theme_text_color:"Secondary"
                                    padding:[0,0,0,20]

                                MDGridLayout:
                                    cols:2
                                    spacing:15
                                    adaptive_height:True

                                    MDLabel:
                                        text:"Вспомогательная рамка\n"
                                        adaptive_height:True

                                    MDSwitch:
                                        widget_style: "ios"
                                        adaptive_width:True
                                        id:enable_help_frame
                                        on_active: app.settings.put("enable_help_frame",mode=self.active)

                                    MDLabel:
                                        text:"Разрешение камеры\n"
                                        adaptive_height:True

                                    MDLabel:
                                        text:preview.aspect_ratio+"\n"
                                        size_hint_x:None
                                        theme_text_color:"Secondary"
                                        adaptive_width:True
                                        adaptive_height:True

                                    MDTextButton:
                                        text: "Очистить кеш камеры"
                                        line_color:0,0,0,0
                                        on_release:app.clear_cache(['camera_tmp'])

                                MDLabel:
                                    text:"Основные"
                                    padding:[0,60,0,30]
                                    adaptive_height:True
                                    theme_text_color:"Secondary"

                                MDGridLayout:
                                    cols:2
                                    adaptive_height:True
                                    spacing:15

                                    MDLabel:
                                        text:"Тема\n"
                                        adaptive_height:True

                                    MDLabel:
                                        text:app.theme_cls.theme_style+"\n"
                                        size_hint_x:None
                                        theme_text_color:"Secondary"
                                        adaptive_size:True

                                    MDTextButton:
                                        text: "Сбросить настройки"
                                        line_color:0,0,0,0
                                        on_release:
                                            app.set_settings(reset=True)
                                            app.setup()

                                MDLabel:
                                    padding:[0,60,0,20]
                                    text:"Отладка"
                                    adaptive_height:True
                                    theme_text_color:"Secondary"

                                MDGridLayout:
                                    cols:2
                                    adaptive_height:True
                                    spacing:15

                                    MDLabel:
                                        text:"Режим отладки\n"
                                        adaptive_height:True

                                    MDSwitch:
                                        widget_style: "ios"
                                        adaptive_width:True
                                        id:enable_debug_mode
                                        on_active: app.settings.put("enable_debug_mode",mode=self.active)

                                    MDLabel:
                                        text:"Тестовый сервер\n"
                                        adaptive_height:True

                                    MDSwitch:
                                        widget_style: "ios"
                                        adaptive_width:True
                                        id:enable_test_server
                                        on_active: app.settings.put("enable_test_server",mode=self.active)

                                    MDBoxLayout:
                                        adaptive_height:True
                                        orientation:"vertical"
                                        spacing:70
                                        padding:[0,10,0,0]
                                        MDTextButton:
                                            text: "Выгрузить логи"
                                            line_color:0,0,0,0
                                            on_release:app.get_logs()

                                        MDTextButton:
                                            text: "Очистить логи"
                                            line_color:0,0,0,0
                                            on_release:app.clear_cache(['.kivy/logs'])      

                                        MDTextButton:
                                            text: "Обновить данные"
                                            line_color:0,0,0,0
                                            on_release:app.update_config()

            MDNavigationDrawer:
                id: nav_drawer
                radius: (0, 0, 0, 0)

                MDNavigationDrawerMenu:
                    MDNavigationDrawerHeader:
                        title: "MathCamera"
                        source: "media/app-favicon.png"
                        spacing:"10dp"
                        padding: "12dp", 0, 0, "12dp"

                    MDNavigationDrawerDivider:

                    DrawerClickableItem:
                        icon: "text-recognition"
                        text: "Камера"
                        on_release:
                            app.set_screen('sc_photo')

                    DrawerClickableItem:
                        icon: "calculator"
                        text: "Калькулятор"
                        on_release:
                            app.set_screen('sc_text')

                    MDNavigationDrawerDivider:

                    DrawerClickableItem:
                        icon: "history"
                        text: "История"
                        on_release:app.set_screen('sc_history')

                    DrawerClickableItem:
                        icon: "cog"
                        text: "Настройки"
                        on_release:
                            app.set_screen('sc_settings')

                    MDNavigationDrawerDivider:

                    DrawerClickableItem:
                        icon: "account-group"
                        text: "Сообщество"
                        on_release:
                            app.open_browser(app.config_['information_url'])

                    DrawerClickableItem:
                        icon: "message-badge"
                        text: "Обратная связь"
                        on_release:
                            app.open_browser(app.config_['report_url'])

                    DrawerClickableItem:
                        icon: "star"
                        text: "Оставить отзыв"
                        on_release:
                            app.open_browser(app.config_['download_url'])

                    MDNavigationDrawerDivider:

                    DrawerClickableItem:
                        icon: "information"
                        text: "Версия "+app.version_
    
    MDScreen:
        name:"onboarding_sc"
        md_bg_color:"#02714C"
        FitImage:
            source:"media/onboarding/onboarding-bg.png"
        Carousel: 
            id:onboarding_carousel
            MDFloatLayout:
                orientation:"vertical"
                FitImage:
                    source:"media/onboarding/onboarding-1.png"

                MDRaisedButton:
                    text:"Дальше"
                    theme_text_color: "Custom"
                    text_color: "#02714C"
                    md_bg_color:"white"
                    theme_icon_color: "Custom"
                    pos_hint:{"center_x":.5,"center_y":.08}
                    on_release:onboarding_carousel.load_next(mode='next')

            MDFloatLayout:
                orientation:"vertical"
                FitImage:
                    source:"media/onboarding/onboarding-2.png"

                MDRaisedButton:
                    text:"Дальше"
                    theme_text_color: "Custom"
                    text_color: "#02714C"
                    md_bg_color:"white"
                    theme_icon_color: "Custom"
                    pos_hint:{"center_x":.5,"center_y":.08}
                    on_release:onboarding_carousel.load_next(mode='next')

            MDFloatLayout:
                orientation:"vertical"
                FitImage:
                    source:"media/onboarding/onboarding-3.png"

                MDRaisedButton:
                    text:"Дальше"
                    theme_text_color: "Custom"
                    text_color: "#02714C"
                    md_bg_color:"white"
                    theme_icon_color: "Custom"
                    pos_hint:{"center_x":.5,"center_y":.08}
                    on_release:onboarding_carousel.load_next(mode='next')

            MDFloatLayout:
                orientation:"vertical"
                FitImage:
                    source:"media/onboarding/onboarding-4.png"

                MDRaisedButton:
                    text:"Дальше"
                    theme_text_color: "Custom"
                    text_color: "#02714C"
                    md_bg_color:"white"
                    theme_icon_color: "Custom"
                    pos_hint:{"center_x":.5,"center_y":.08}
                    on_release:onboarding_carousel.load_next(mode='next')

            MDFloatLayout:
                orientation:"vertical"
                FitImage:
                    source:"media/onboarding/onboarding-5.png"

                MDRaisedButton:
                    text:"Закрыть"
                    theme_text_color: "Custom"
                    text_color: "#02714C"
                    md_bg_color:"white"
                    theme_icon_color: "Custom"
                    pos_hint:{"center_x":.5,"center_y":.08}
                    on_release:root.current="main_sc"