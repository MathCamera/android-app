<KeyboardFlatButton@MDFlatButton>:
    size_hint: 1, 1
    md_bg_color:app.theme_cls.bg_light
    on_parent:
        self.font_size *= 2
    ripple_duration_in_fast: .1

<LetterFlatButton@MDFlatButton>:
    size_hint: 0.5,0.5
    md_bg_color:app.theme_cls.bg_light
    on_parent:
        self.font_size *= 1.5
    ripple_duration_in_fast: .1

<CustomFlatIconButton>:
    size_hint: 1, 1
    md_bg_color:app.theme_cls.bg_light
    ripple_duration_in_fast: .1

<MultiModeFlatButton>:
    text: self.modes[0]
    value: self.values[0]
    size_hint: 1, 1
    md_bg_color:app.theme_cls.divider_color
    on_parent:
        self.font_size *= 2
    ripple_duration_in_fast: .1

<DrawerClickableItem@MDNavigationDrawerItem>
    _no_ripple_effect: True
    focus_behavior: False
    selected_color:app.theme_cls.text_color #"#DCDCDC" if app.theme_cls.theme_style == "Dark" else "#101010"
    icon_color:app.theme_cls.text_color
    text_color:app.theme_cls.text_color

<ClickableTextFieldRound>:
    #size_hint_y: None
    height: text_field.height

    MDTextField:
        id: text_field
        hint_text:"Введите математическую задачу"
        text: root.text
        helper_text: 'Это поле не должно быть пустым'
        helper_text_mode: "on_error"
        pos_hint:{"top":1}
        keyboard_mode:"managed"
        max_height: "140dp"
        color:app.theme_cls.error_color
        use_bubble: False

    MDIconButton:
        icon: "close-circle-outline"
        pos_hint: {"center_y": .5}
        pos: text_field.width - self.width + dp(8), 0
        theme_text_color: "Hint"
        on_release: text_field.text = ""
        pos_hint:{"top":1}

ScreenManager:
    id:root_sm
    MDScreen:
        name:"main_sc"
        MDNavigationLayout:

            MDTopAppBar:
                id:tb
                title:"Камера"
                pos_hint: {"top": 1}
                md_bg_color: "#02714C"
                left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
                right_action_items:[["help-circle-outline", lambda x: app.set_screen("onboarding_sc",root_=True), "", "Справка"]]

            ScreenManager:
                id:sm

                MDScreen:
                    name:"sc_photo"
                    on_enter:
                        app.handle_camera()
                        tb.title="Камера"

                    BoxLayout:
                        padding:[0,tb.height,0,0]
                        orientation:"vertical"
                        XCamera:
                            id:preview
                            aspect_ratio:"16:9"

                    MDIconButton:
                        pos_hint: {"center_x":.2,"center_y":.1}
                        icon: "file-image"
                        icon_size: "30sp"
                        icon_color:"white"
                        theme_icon_color: "Custom"
                        _no_ripple_effect: True
                        on_press:app.choose()

                    MDIconButton:
                        _no_ripple_effect: True
                        pos_hint: {"center_x":.5,"center_y":.1}
                        icon: "camera-iris"
                        icon_color:"white"
                        icon_size: "30sp"
                        theme_icon_color: "Custom"
                        #md_bg_color:"black"
                        on_press:app.photo()

                    MDIconButton:
                        id:flashlight_btn
                        _no_ripple_effect: True
                        pos_hint: {"center_x":.8,"center_y":.1}
                        icon_size: "30sp"
                        icon: "flash"
                        icon_color:"white"
                        theme_icon_color: "Custom"
                        on_press:app.switch_flashlight_mode()

                    MDCard:
                        size_hint:None,None
                        pos_hint: {"center_x":.5,"center_y":.85}
                        radius: (16, 16, 16, 16)
                        width:camera_help.width
                        height:camera_help.height
                        md_bg_color:app.theme_cls.bg_dark

                        MDLabel:
                            id:camera_help
                            padding:[15,10,15,10]
                            text: "Сфотографируйте математическую задачу"
                            adaptive_size:True
                            font_style:"Subtitle2"
                            
                Screen:
                    name:"sc_text"
                    on_enter:
                        tb.title="Калькулятор"
                        textarea.ids.text_field.focus=True
                        textarea.ids.text_field.error=False

                    MDBoxLayout:
                        padding:[0,tb.height + dp(15),0,0]
                        orientation:"vertical"

                        MDBoxLayout:
                            id:text_inp_bl
                            size_hint_y: 0.8
                            padding:[20,0,20,30]
                            orientation:"vertical"
                            #spacing:10

                            #MDLabel:
                            #    padding:[0,10,0,20]
                            #    pos_hint:{"center_x":.5}
                            #    text: "Отредактируйте математическую задачу"
                            #    adaptive_size:True
                            #    font_style:"Subtitle1"

                            ClickableTextFieldRound:
                                id:textarea

                            MDRectangleFlatIconButton:
                                id:send_btn
                                icon: "arrow-right"
                                text: "Отправить"
                                pos_hint:{"center_x":.5}
                                theme_text_color: "Custom"
                                text_color: "white"
                                md_bg_color:"#02714C"
                                theme_icon_color: "Custom"
                                icon_color: "white"
                                on_release:
                                    app.send_equation(textarea.ids.text_field.text)

                        TOP_KB:

                        MDBoxLayout:
                            orientation:"vertical"
                            ScreenManager:
                                id:kb_manager
                                MDScreen:
                                    name:"main_kb"
                                    MAIN_KB:

                                MDScreen:
                                    name:"trigonometry_kb"
                                    TRIGONOMETRY_KB:

                                MDScreen:
                                    name:"letters_kb"
                                    LETTERS_KB:

                                #MDScreen:
                                #    name:"grades_kb"
                                #    GRADES_KB:

                                #MDScreen:
                                #    name:"functions_kb"
                                #    FUNCTIONS_KB:

                Screen:
                    on_enter:
                        tb.title="Решение"
                    name:"sc_solve"

                    BoxLayout:
                        orientation:"vertical"
                        padding:[20,tb.height + dp(5),20,20]
                        MDGridLayout:
                            cols:3
                            adaptive_height:True
  
                            MDIconButton:
                                icon: "arrow-left"
                                on_release:app.set_screen(app.last_screen)

                            MDIconButton:
                                icon: "pencil"
                                on_release:
                                    app.set_screen("sc_text")
                                    textarea.ids.text_field.text = gl.problem_input

                            #MDRelativeLayout:
                            #    MDIconButton:
                            #        pos_hint:{"center_x":.9}
                            #        icon: "alert-circle-outline"
                            #        on_release:app.send_report("Неверное решение задачи: "+gl.problem_input)

                        ScrollView:
                            id:gl_sw
                            do_scroll_x: False
                            do_scroll_y: True
                            
                            GridLayout:
                                id:gl
                                cols:1
                                spacing:10
                                size_hint_y: None
                                height: self.minimum_height

                Screen:
                    name:"sc_history"
                    on_enter:
                        tb.title='История'
                        app.load_history()

                    BoxLayout:
                        orientation:"vertical"
                        padding:[15,tb.height + dp(5),15,30]
                        spacing:10

                        MDScrollView:
                            id:history_layout

                        MDRectangleFlatIconButton:
                            id:history_clear_btn
                            #size_hint_x: 1 if self.visible else 0
                            disabled:True
                            icon: "broom"
                            text: "Очистить историю"
                            pos_hint:{"center_x":.5}
                            theme_text_color: "Custom"
                            text_color: "white"
                            md_bg_color:"#02714C"
                            theme_icon_color: "Custom"
                            icon_color: "white"
                            on_release:
                                app.history.clear()
                                app.load_history()

                Screen:
                    name:"sc_settings"
                    on_enter:
                        tb.title="Насторйки"
                        app.setup()

                    BoxLayout:
                        orientation:"vertical"
                        padding:[0,tb.height,0,0]

                        ScrollView:
                            do_scroll_x: False
                            do_scroll_y: True
                                
                            GridLayout:
                                cols:1
                                size_hint_y: None
                                height: self.minimum_height
                                padding:[50,40,50,40]
                                spacing:15

                                MDLabel:
                                    text:"Камера"
                                    adaptive_height:True
                                    theme_text_color:"Secondary"

                                MDGridLayout:
                                    cols:2
                                    adaptive_height:True

                                    MDLabel:
                                        text:"Вспомогательная рамка\n"
                                        adaptive_height:True

                                    MDSwitch:
                                        widget_style: "ios"
                                        adaptive_width:True
                                        id:enable_help_frame
                                        #disabled:True
                                        on_active: app.settings.put("enable_help_frame",mode=self.active)

                                    MDLabel:
                                        padding:[0,15,0,0]
                                        text:"Разрешение камеры\n"
                                        adaptive_height:True

                                    MDLabel:
                                        text:preview.aspect_ratio+"\n"
                                        size_hint_x:None
                                        theme_text_color:"Secondary"
                                        adaptive_width:True
                                        adaptive_height:True

                                MDTextButton:
                                    text: "Очистить кеш камеры"
                                    line_color:0,0,0,0
                                    on_release:app.clear_cache(['camera_tmp'])

                                MDLabel:
                                    text:"Основные"
                                    padding:[0,25,0,0]
                                    adaptive_height:True
                                    theme_text_color:"Secondary"

                                MDGridLayout:
                                    cols:2
                                    adaptive_height:True

                                    MDLabel:
                                        padding:[0,15,0,0]
                                        text:"Тема\n"
                                        adaptive_height:True

                                    MDLabel:
                                        text:app.theme_cls.theme_style+"\n"
                                        size_hint_x:None
                                        theme_text_color:"Secondary"
                                        adaptive_size:True

                                MDTextButton:
                                    text: "Сбросить настройки"
                                    line_color:0,0,0,0
                                    on_release:
                                        app.set_settings(reset=True)
                                        app.setup()

                                MDLabel:
                                    padding:[0,25,0,0]
                                    text:"Отладка"
                                    adaptive_height:True
                                    theme_text_color:"Secondary"

                                MDGridLayout:
                                    cols:2
                                    adaptive_height:True

                                    MDLabel:
                                        text:"Режим отладки\n"
                                        adaptive_height:True

                                    MDSwitch:
                                        widget_style: "ios"
                                        adaptive_width:True
                                        id:enable_debug_mode
                                        on_active: app.settings.put("enable_debug_mode",mode=self.active)

                                    MDLabel:
                                        text:"Тестовый сервер\n"
                                        adaptive_height:True

                                    MDSwitch:
                                        widget_style: "ios"
                                        adaptive_width:True
                                        id:enable_test_server
                                        on_active: app.settings.put("enable_test_server",mode=self.active)

                                MDTextButton:
                                    text: "Выгрузить логи"
                                    line_color:0,0,0,0
                                    on_release:app.get_logs()

                                MDTextButton:
                                    padding:[0,25,0,0]
                                    text: "Очистить логи"
                                    line_color:0,0,0,0
                                    on_release:app.clear_cache(['.kivy/logs'])      

                                MDTextButton:
                                    padding:[0,25,0,0]
                                    text: "Обновить данные"
                                    line_color:0,0,0,0
                                    on_release:app.update_config()

            MDNavigationDrawer:
                id: nav_drawer
                radius: (0, 0, 0, 0)

                MDNavigationDrawerMenu:
                    MDNavigationDrawerHeader:
                        title: "MathCamera"
                        source: "media/transparent-icon.png"
                        spacing:"4dp"
                        padding: "12dp", 0, 0, "12dp"

                    MDNavigationDrawerDivider:

                    DrawerClickableItem:
                        icon: "text-recognition"
                        text: "Камера"
                        on_release:
                            app.set_screen('sc_photo')

                    DrawerClickableItem:
                        icon: "calculator"
                        text: "Калькулятор"
                        on_release:
                            app.set_screen('sc_text')

                    #DrawerClickableItem:
                    #    icon: "file-image"
                    #    text: "Выбрать из галереи"
                    #    on_release:app.choose()

                    MDNavigationDrawerDivider:

                    DrawerClickableItem:
                        icon: "history"
                        text: "История"
                        on_release:app.set_screen('sc_history')

                    DrawerClickableItem:
                        icon: "cog"
                        text: "Настройки"
                        on_release:
                            app.set_screen('sc_settings')

                    MDNavigationDrawerDivider:

                    DrawerClickableItem:
                        icon: "account-group"
                        text: "Сообщество"
                        on_release:
                            app.open_browser(app.config_['information_url'])

                    DrawerClickableItem:
                        icon: "message-badge"
                        text: "Обратная связь"
                        on_release:
                            app.open_browser(app.config_['report_url'])

                    DrawerClickableItem:
                        icon: "star"
                        text: "Оставить отзыв"
                        on_release:
                            app.open_browser(app.config_['download_url'])

                    MDNavigationDrawerDivider:

                    DrawerClickableItem:
                        icon: "information"
                        text: "Версия "+app.version_
    
    MDScreen:
        name:"onboarding_sc"
        md_bg_color:"#02714C"
        Carousel: 
            id:onboarding_carousel
            MDFloatLayout:
                orientation:"vertical"
                FitImage:
                    source:"media/onboarding-1.png"

                MDRaisedButton:
                    text:"Дальше"
                    theme_text_color: "Custom"
                    text_color: "#02714C"
                    md_bg_color:"white"
                    theme_icon_color: "Custom"
                    pos_hint:{"center_x":.5,"center_y":.08}
                    on_release:onboarding_carousel.load_next(mode='next')

            MDFloatLayout:
                orientation:"vertical"
                FitImage:
                    source:"media/onboarding-2.png"

                MDRaisedButton:
                    text:"Дальше"
                    theme_text_color: "Custom"
                    text_color: "#02714C"
                    md_bg_color:"white"
                    theme_icon_color: "Custom"
                    pos_hint:{"center_x":.5,"center_y":.08}
                    on_release:onboarding_carousel.load_next(mode='next')

            MDFloatLayout:
                orientation:"vertical"
                FitImage:
                    source:"media/onboarding-3.png"

                MDRaisedButton:
                    text:"Дальше"
                    theme_text_color: "Custom"
                    text_color: "#02714C"
                    md_bg_color:"white"
                    theme_icon_color: "Custom"
                    pos_hint:{"center_x":.5,"center_y":.08}
                    on_release:onboarding_carousel.load_next(mode='next')

            MDFloatLayout:
                orientation:"vertical"
                FitImage:
                    source:"media/onboarding-4.png"

                MDRaisedButton:
                    text:"Готово"
                    theme_text_color: "Custom"
                    text_color: "#02714C"
                    md_bg_color:"white"
                    theme_icon_color: "Custom"
                    pos_hint:{"center_x":.5,"center_y":.08}
                    on_release:root.current="main_sc"