#:import CustomFlatIconButton modules.keyboard.button.CustomFlatIconButton
#:import MultiModeFlatButton modules.keyboard.button.MultiModeFlatButton

<KeyboardFlatButton@MDFlatButton>:
    size_hint: 1, 1
    md_bg_color: (255,255,255,1)
    on_parent:
        self.font_size *= 2

<CustomFlatIconButton>:
    size_hint: 1, 1
    md_bg_color: (255,255,255,1)

<MultiModeFlatButton>:
    text: self.modes[0]
    size_hint: 1, 1
    md_bg_color: (255,255,255,.4)
    on_parent:
        self.font_size *= 2

<KeyBoard@GridLayout>:
    cols:5
    canvas:
        Color:
            rgba: .20,.20,.20, .25
        Rectangle:
            pos: self.pos
            size: self.size
                                    
    size_hint_y: 1
    padding: dp(1.5)
    spacing: dp(1.5)

    CustomFlatIconButton:
        icon: 'keyboard-tab'

    KeyboardFlatButton:
        text: '^'
        on_press: app.edit_textfield(self.text)

    MultiModeFlatButton:
        modes: ['<','>']
        on_short_press: app.edit_textfield(self.text)

    MultiModeFlatButton:
        modes: ['x','y','z']
        on_short_press: app.edit_textfield(self.text)

    CustomFlatIconButton:
        icon: 'backspace'
        on_press: app.delete_textfield()

    CustomFlatIconButton:
        icon: 'close'
        on_press: app.edit_textfield("*")

    KeyboardFlatButton:
        text: '7'
        on_press: app.edit_textfield(self.text)

    KeyboardFlatButton:
        text: '8'
        on_press: app.edit_textfield(self.text)

    KeyboardFlatButton:
        text: '9'
        on_press: app.edit_textfield(self.text)

    CustomFlatIconButton:
        icon: 'square-root'
        on_press: app.edit_textfield(self.text+"√()",1)

    KeyboardFlatButton:
        text: '÷'
        on_press: app.edit_textfield("/")

    KeyboardFlatButton:
        text: '4'
        on_press: app.edit_textfield(self.text)

    KeyboardFlatButton:
        text: '5'
        on_press: app.edit_textfield(self.text)

    KeyboardFlatButton:
        text: '6'
        on_press: app.edit_textfield(self.text)

    MultiModeFlatButton:
        modes: ['sin','cos','tan']
        on_short_press: app.edit_textfield(self.text+"()",1)

    KeyboardFlatButton:
        text: '+'
        on_press: app.edit_textfield(self.text)

    KeyboardFlatButton:
        text: '1'
        on_press: app.edit_textfield(self.text)

    KeyboardFlatButton:
        text: '2'
        on_press: app.edit_textfield(self.text)

    KeyboardFlatButton:
        text: '3'
        on_press: app.edit_textfield(self.text)

    MultiModeFlatButton:
        modes: ['(',')']
        on_short_press: app.edit_textfield(self.text)

    KeyboardFlatButton:
        text: '-'
        on_press: app.edit_textfield(self.text)

    KeyboardFlatButton:
        text: '.'
        on_press: app.edit_textfield(self.text)

    KeyboardFlatButton:
        text: '0'
        on_press: app.edit_textfield(self.text)

    CustomFlatIconButton:
        icon: 'pi'
        on_press: app.edit_textfield("π")

    CustomFlatIconButton:
        icon: 'equal'
        on_press: app.edit_textfield("=")