<MAIN_KB@GridLayout>:
    cols:5
    canvas:
        Color:
            rgba: .20,.20,.20, .25
        Rectangle:
            pos: self.pos
            size: self.size
            
    size_hint_y: 1
    padding: dp(1.5)
    spacing: dp(1.5)
    button_size_hint:1,1
    button_font_size:2

    MultiModeFlatButton:
        modes: ['<','>',"≥","≤"]
        values: ['<','>',"≥","≤"]
        on_short_press: edit_textfield(app,"edit",self.value)

    KeyboardFlatButton:
        text: '√'
        on_press: edit_textfield(app,"edit",self.text+"()")

    KeyboardFlatButton:
        text: '/'
        on_press: edit_textfield(app,"edit","/")

    KeyboardFlatButton:
        text: '|x|'
        on_press: edit_textfield(app,"edit","Abs()")

    KeyboardFlatButton:
        text: '!'
        on_press: edit_textfield(app,"edit","!")

    MultiModeFlatButton:
        modes: ['π','E']
        values: ['π','E']
        on_short_press: edit_textfield(app,"edit",self.value)

    KeyboardFlatButton:
        text: '7'
        on_press: edit_textfield(app,"edit",self.text)

    KeyboardFlatButton:
        text: '8'
        on_press: edit_textfield(app,"edit",self.text)

    KeyboardFlatButton:
        text: '9'
        on_press: edit_textfield(app,"edit",self.text)

    KeyboardFlatButton:
        text: '÷'
        on_press: edit_textfield(app,"edit",self.text)

    MultiModeFlatButton:
        modes: ['()','(',')']
        values: ['()','(',')']
        on_short_press: edit_textfield(app,"edit",self.value)

    KeyboardFlatButton:
        text: '4'
        on_press: edit_textfield(app,"edit",self.text)

    KeyboardFlatButton:
        text: '5'
        on_press: edit_textfield(app,"edit",self.text)

    KeyboardFlatButton:
        text: '6'
        on_press: edit_textfield(app,"edit",self.text)

    CustomFlatIconButton:
        icon: 'close'
        on_press: edit_textfield(app,"edit","*")

    MultiModeFlatButton:
        modes: ['^2','^3','^4']
        values: ['^(2)','^(3)',"^(4)"]
        on_short_press: edit_textfield(app,"edit",self.value)

    KeyboardFlatButton:
        text: '1'
        on_press: edit_textfield(app,"edit",self.text)

    KeyboardFlatButton:
        text: '2'
        on_press: edit_textfield(app,"edit",self.text)

    KeyboardFlatButton:
        text: '3'
        on_press: edit_textfield(app,"edit",self.text)

    KeyboardFlatButton:
        text: '-'
        on_press: edit_textfield(app,"edit",self.text)

    MultiModeFlatButton:
        modes: ['x','y','z']
        values: ['x','y','z']
        on_short_press: edit_textfield(app,"edit",self.value)

    KeyboardFlatButton:
        text: '.'
        on_press: edit_textfield(app,"edit",self.text)

    KeyboardFlatButton:
        text: '0'
        on_press: edit_textfield(app,"edit",self.text)

    KeyboardFlatButton:
        text: '='
        on_press: edit_textfield(app,"edit",self.text)

    KeyboardFlatButton:
        text: '+'
        on_press: edit_textfield(app,"edit",self.text)