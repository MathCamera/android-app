<FUNCTIONS_KB@GridLayout>:
    cols:5
    canvas:
        Color:
            rgba: .20,.20,.20, .25
        Rectangle:
            pos: self.pos
            size: self.size
            
    size_hint_y: 1
    padding: dp(1.5)
    spacing: dp(1.5)
    button_size_hint:1,1
    button_font_size:2

    KeyboardFlatButton:
        text: 'exp'
        on_press: edit_textfield(app,"edit","exp()")

    KeyboardFlatButton:
        text: 'нод'
        on_press: edit_textfield(app,"edit","gcd()")

    KeyboardFlatButton:
        text: 'нок'
        on_press: edit_textfield(app,"edit","lcm()")

    KeyboardFlatButton:
        text: 'log'
        on_press: edit_textfield(app,"edit","log()")

    KeyboardFlatButton:
        text: 'log₂'
        on_press: edit_textfield(app,"edit","log(,2)")

    KeyboardFlatButton:
        text: 'log₁₀'
        on_press: edit_textfield(app,"edit","log(,10)")

    KeyboardFlatButton:
        text: "d/dx"
        on_press: edit_textfield(app,"edit","der()")

    KeyboardFlatButton:
        text: '∫'
        on_press: edit_textfield(app,"edit","integral()")

    KeyboardFlatButton:
        text: '∞'
        on_press: edit_textfield(app,"edit","∞")

    KeyboardFlatButton:
        text: '!'
        on_press: edit_textfield(app,"edit","!")