<TOP_KB@BoxLayout>:
    canvas:
        Color:
            rgba: .20,.20,.20, .25
        Rectangle:
            pos: self.pos
            size: self.size
            
    size_hint_y: 0.2
    padding: dp(1.5)
    spacing: dp(1.5)

    CustomFlatIconButton:
        icon: 'keyboard-tab'
        on_press: set_kb(app,"next")

    CustomFlatIconButton:
        icon: 'arrow-left'
        on_press: move_cursor(app,"left")

    CustomFlatIconButton:
        icon: 'arrow-right'
        on_press: move_cursor(app,"right")

    CustomFlatIconButton:
        icon: 'undo'
        on_press: edit_textfield(app,"undo")

    CustomFlatIconButton:
        icon: 'backspace'
        on_short_press: edit_textfield(app,"delete")
        on_long_press: edit_textfield(app,"clear")